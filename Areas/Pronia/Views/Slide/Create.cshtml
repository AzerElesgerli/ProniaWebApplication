@model Slide
﻿

<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Create Product</h4>

                <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="Name1"></label>
                        <input asp-for="Name1" class="form-control" placeholder="Title1">
                        <span asp-validation-for="Name1" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name2"></label>
                        <input asp-for="Name2" class="form-control" placeholder="Title2">
                        <span asp-validation-for="Name2" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description"></label>
                        <input asp-for="Description" class="form-control" placeholder="Desc">
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Image"></label>
                        <input asp-for="Image" class="form-control" placeholder="Order">
                        <span asp-validation-for="Image" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Order"></label>
                        <input asp-for="Order" class="form-control" placeholder="Photo">
                        <span asp-validation-for="Order" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <a asp-action="index" class="btn btn-light">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>